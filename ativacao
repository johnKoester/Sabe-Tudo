    <script>
        let currentCode = '';
        let selectedPlan = '';
        let validatedCode = false;

        // Configura√ß√£o da API
        const API_URL = 'https://3wrdrwv8i7.execute-api.us-east-1.amazonaws.com/prod/SabeTudoAtivacao';
        const HMAC_KEY = 'J!!3n%.oyiu';

        // Manipula√ß√£o dos campos de c√≥digo
        document.querySelectorAll('.code-digit').forEach((input, index) => {
            input.addEventListener('input', function(e) {
                const value = e.target.value.toUpperCase();
                if (value.length === 1) {
                    e.target.value = value;
                    if (index < 5) {
                        document.querySelector(`[data-index="${index + 1}"]`).focus();
                    }
                }
                updateCurrentCode();
            });

            input.addEventListener('keydown', function(e) {
                if (e.key === 'Backspace' && e.target.value === '' && index > 0) {
                    document.querySelector(`[data-index="${index - 1}"]`).focus();
                }
            });

            input.addEventListener('paste', function(e) {
                e.preventDefault();
                const paste = e.clipboardData.getData('text').toUpperCase();
                if (paste.length === 6) {
                    document.querySelectorAll('.code-digit').forEach((inp, idx) => {
                        inp.value = paste[idx] || '';
                    });
                    updateCurrentCode();
                }
            });
        });

        function updateCurrentCode() {
            currentCode = '';
            document.querySelectorAll('.code-digit').forEach(input => {
                currentCode += input.value;
            });
            
            const validateBtn = document.getElementById('validateBtn');
            validateBtn.disabled = currentCode.length !== 6;
        }

        // Fun√ß√£o para gerar hash HMAC (simula√ß√£o simples)
        function generateHMAC(message, key) {
            // Em produ√ß√£o, use uma biblioteca de criptografia adequada
            // Esta √© uma implementa√ß√£o simplificada para demonstra√ß√£o
            let hash = 0;
            const combined = message + key;
            for (let i = 0; i < combined.length; i++) {
                const char = combined.charCodeAt(i);
                hash = ((hash << 5) - hash) + char;
                hash = hash & hash;
            }
            return Math.abs(hash).toString(16);
        }

        function showMessage(message, type) {
            const statusMessage = document.getElementById('statusMessage');
            statusMessage.textContent = message;
            statusMessage.className = `status-message status-${type}`;
            statusMessage.style.display = 'block';
            
            if (type === 'success') {
                setTimeout(() => {
                    statusMessage.style.display = 'none';
                }, 5000);
            }
        }

        function showLoader(show) {
            document.getElementById('loader').style.display = show ? 'block' : 'none';
        }

        async function validateCode() {
            if (currentCode.length !== 6) {
                showMessage('Por favor, insira um c√≥digo de 6 caracteres', 'error');
                return;
            }

            showLoader(true);
            document.getElementById('validateBtn').disabled = true;

            try {
                const timestamp = Date.now().toString();
                const hmac = generateHMAC(currentCode + timestamp, HMAC_KEY);
                
                const response = await fetch(API_URL, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({
                        codigo: currentCode,
                        timestamp: timestamp,
                        hmac: hmac
                    })
                });

                const data = await response.json();
                
                if (response.ok && data.success) {
                    showMessage('C√≥digo validado com sucesso!', 'success');
                    validatedCode = true;
                    
                    // Ativar passo 2
                    document.getElementById('step1').classList.remove('active');
                    document.getElementById('step2').classList.add('active');
                    document.getElementById('paymentOptions').style.display = 'block';
                    
                    // Mostrar status da assinatura
                    if (data.assinaturaAtiva) {
                        showMessage('Sua assinatura j√° est√° ativa! Voc√™ pode usar a skill normalmente.', 'info');
                        document.getElementById('paymentOptions').style.display = 'none';
                        document.getElementById('paymentBtn').style.display = 'none';
                    }
                } else {
                    showMessage(data.message || 'C√≥digo inv√°lido ou expirado', 'error');
                }
            } catch (error) {
                showMessage('Erro ao validar c√≥digo. Tente novamente.', 'error');
                console.error('Erro:', error);
            } finally {
                showLoader(false);
                document.getElementById('validateBtn').disabled = false;
            }
        }

        function selectPlan(plan) {
            selectedPlan = plan;
            
            // Atualizar visual
            document.querySelectorAll('.payment-option').forEach(option => {
                option.classList.remove('selected');
            });
            document.querySelector(`[data-plan="${plan}"]`).classList.add('selected');
            
            // Habilitar bot√£o de pagamento
            document.getElementById('paymentBtn').disabled = false;
        }

        function processPayment() {
            if (!selectedPlan) {
                showMessage('Selecione um plano antes de continuar', 'error');
                return;
            }

            // Aqui voc√™ implementar√° a integra√ß√£o com Mercado Pago
            // Por enquanto, mostraremos uma mensagem de desenvolvimento
            showMessage('Redirecionando para pagamento...', 'info');
            
            // Simular redirecionamento para Mercado Pago
            setTimeout(() => {
                // Em produ√ß√£o, voc√™ criar√° a prefer√™ncia de pagamento e redirecionar√°
                const paymentData = {
                    codigo: currentCode,
                    plano: selectedPlan,
                    preco: selectedPlan === 'dayuse' ? 0.49 : 4.99
                };
                
                console.log('Dados do pagamento:', paymentData);
                
                // Aqui voc√™ faria a integra√ß√£o real com Mercado Pago
                alert('Integra√ß√£o com Mercado Pago ser√° implementada na pr√≥xima etapa!\n\nDados do pagamento:\n' + 
                      'C√≥digo: ' + currentCode + '\n' + 
                      'Plano: ' + selectedPlan + '\n' + 
                      'Pre√ßo: R$ ' + (selectedPlan === 'dayuse' ? '0,49' : '4,99'));
            }, 1000);
        }

        // Focar no primeiro campo ao carregar
        document.addEventListener('DOMContentLoaded', function() {
            document.querySelector('[data-index="0"]').focus();
        });
    </script>
